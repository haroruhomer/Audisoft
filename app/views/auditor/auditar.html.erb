<div id="checklist" class="col-md-6 center-block text-center posicion"> 
    <h2 class="text-center">CHECKLIST</h2>
    <table id="" >
    	<tr>
            <th><h2>Control</h2></th>
            <th><h2>Si</h2></th>
            <th><h2>No</h2></th>
        </tr>                   
		<%=form_for(@contr_est) do |f| %>
			<%@controls.each_with_index do |control, i|%>
				<tr>
					<td><%=f.hidden_field "control_id#{i+1}",value: control.id%><%=text_field_tag 'id', control.control, disabled: true%> </td>
					<td><%= radio_button_tag "control_estado[estado_id#{i+1}]",1%></td>
					<td><%= radio_button_tag  "control_estado[estado_id#{i+1}]",2%></td>
				</tr>
			<%end%>
			<%=f.submit%>
		<%end%>
    </table>
   <br><br><input type="date" name="fechafinal" placeholder="Fecha Final">
        
</div>